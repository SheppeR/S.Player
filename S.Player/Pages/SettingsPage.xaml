<modern:Page
    x:Class="S.Player.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:content="clr-namespace:S.Player.Pages.Content"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modern="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding SettingsPage, Source={StaticResource Locator}}"
    mc:Ignorable="d">


    <Grid>
        <modern:ScrollViewerEx
            x:Name="contentSV"
            IsTabStop="False"
            VerticalScrollBarVisibility="Auto">
            <TabControl x:Name="tabControl" Style="{StaticResource TabControlPivotStyle}">

                <TabItem Header="DESIGN">
                    <content:ContentAppearence Margin="5,20" />
                </TabItem>

                <TabItem Header="TODO">
                    <!--  TODO  -->
                </TabItem>

            </TabControl>
        </modern:ScrollViewerEx>
    </Grid>

</modern:Page>