<UserControl
    x:Class="S.Player.Pages.Content.ContentAppearence"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding SettingsPage, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>

            <StackPanel
                x:Name="ThemePanel"
                Margin="10"
                Orientation="Horizontal">
                <TextBlock Style="{DynamicResource SubtitleTextBlockStyle}" Text="Theme Style" />
                <controls:ToggleSwitch
                    x:Name="ThemeSwitch"
                    Margin="30,0,0,0"
                    IsOn="{Binding IsLight}"
                    OffContent="Dark"
                    OnContent="Light" />
            </StackPanel>

            <controls:GridView
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                controls:ThemeManager.HasThemeResources="True"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedValue="{Binding AccentColor}"
                SelectionMode="Single">
                <controls:GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="10" Rows="6" />
                    </ItemsPanelTemplate>
                </controls:GridView.ItemsPanel>
                <controls:GridView.ItemsSource>
                    <x:Array Type="{x:Type Color}">
                        <Color>#a4c400</Color>
                        <Color>#FFB900</Color>
                        <Color>#FF8C00</Color>
                        <Color>#F7630C</Color>
                        <Color>#CA5010</Color>
                        <Color>#DA3B01</Color>
                        <Color>#EF6950</Color>
                        <Color>#D13438</Color>
                        <Color>#FF4343</Color>
                        <Color>#E74856</Color>
                        <Color>#E81123</Color>
                        <Color>#EA005E</Color>
                        <Color>#C30052</Color>
                        <Color>#E3008C</Color>
                        <Color>#BF0077</Color>
                        <Color>#C239B3</Color>
                        <Color>#9A0089</Color>
                        <Color>#0078D7</Color>
                        <Color>#0063B1</Color>
                        <Color>#8E8CD8</Color>
                        <Color>#6B69D6</Color>
                        <Color>#8764B8</Color>
                        <Color>#744DA9</Color>
                        <Color>#B146C2</Color>
                        <Color>#881798</Color>
                        <Color>#0099BC</Color>
                        <Color>#2D7D9A</Color>
                        <Color>#00B7C3</Color>
                        <Color>#038387</Color>
                        <Color>#00B294</Color>
                        <Color>#018574</Color>
                        <Color>#00CC6A</Color>
                        <Color>#10893E</Color>
                        <Color>#7A7574</Color>
                        <Color>#5D5A58</Color>
                        <Color>#68768A</Color>
                        <Color>#515C6B</Color>
                        <Color>#567C73</Color>
                        <Color>#486860</Color>
                        <Color>#498205</Color>
                        <Color>#107C10</Color>
                        <Color>#767676</Color>
                        <Color>#4C4A48</Color>
                        <Color>#69797E</Color>
                        <Color>#4A5459</Color>
                        <Color>#647C64</Color>
                        <Color>#525E54</Color>
                        <Color>#847545</Color>
                        <Color>#7E735F</Color>
                    </x:Array>
                </controls:GridView.ItemsSource>
                <controls:GridView.ItemContainerStyle>
                    <Style TargetType="controls:GridViewItem">
                        <Setter Property="Margin" Value="0,0,2,3" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="controls:GridViewItem">
                                    <Border
                                        x:Name="ContentBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding controls:ControlHelper.CornerRadius}"
                                        SnapsToDevicePixels="True">
                                        <Grid>
                                            <ContentPresenter
                                                x:Name="ContentPresenter"
                                                Margin="{TemplateBinding Padding}"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            <Rectangle
                                                x:Name="BorderRectangle"
                                                IsHitTestVisible="False"
                                                Opacity="0"
                                                Stroke="{DynamicResource SystemControlHighlightListAccentLowBrush}"
                                                StrokeThickness="2" />
                                            <Border
                                                x:Name="MultiSelectSquare"
                                                Width="20"
                                                Height="20"
                                                Margin="0,2,2,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                                Visibility="Collapsed">
                                                <controls:FontIcon
                                                    x:Name="MultiSelectCheck"
                                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                                    FontSize="16"
                                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumHighBrush}"
                                                    Glyph="&#xE73E;"
                                                    Opacity="0" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="BorderRectangle" Property="Opacity" Value="1" />
                                            <Setter TargetName="BorderRectangle" Property="Stroke" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
                                            <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="MultiSelectCheck" Property="Opacity" Value="1" />
                                            <Setter TargetName="BorderRectangle" Property="Opacity" Value="1" />
                                            <Setter TargetName="BorderRectangle" Property="Stroke" Value="{DynamicResource SystemControlHighlightAccentBrush}" />
                                            <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                            <Setter TargetName="MultiSelectSquare" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="MultiSelectSquare" Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}" />
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="MultiSelectCheck" Property="Opacity" Value="1" />
                                            <Setter TargetName="BorderRectangle" Property="Opacity" Value="1" />
                                            <Setter TargetName="BorderRectangle" Property="Stroke" Value="{DynamicResource SystemControlHighlightListAccentMediumBrush}" />
                                            <Setter TargetName="ContentPresenter" Property="TextElement.Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                            <Setter TargetName="MultiSelectSquare" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="MultiSelectSquare" Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}" />
                                        </MultiTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="ContentBorder" Property="Opacity" Value="{DynamicResource ListViewItemDisabledThemeOpacity}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </controls:GridView.ItemContainerStyle>
                <controls:GridView.ItemTemplate>
                    <DataTemplate>
                        <Rectangle
                            Width="40"
                            Height="40"
                            Margin="1">
                            <Rectangle.Fill>
                                <SolidColorBrush x:Name="Brush" Color="{Binding}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </DataTemplate>
                </controls:GridView.ItemTemplate>
                <controls:GridView.Resources>
                    <controls:ResourceDictionaryEx>
                        <controls:ResourceDictionaryEx.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light" controls:ThemeDictionary.Key="Light">
                                <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlForegroundBaseMediumHighBrush" Color="{StaticResource SystemAltHighColor}" />
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Dark" controls:ThemeDictionary.Key="Dark">
                                <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="{StaticResource SystemBaseHighColor}" />
                                <SolidColorBrush x:Key="SystemControlForegroundBaseMediumHighBrush" Color="{StaticResource SystemAltHighColor}" />
                            </ResourceDictionary>
                        </controls:ResourceDictionaryEx.ThemeDictionaries>
                    </controls:ResourceDictionaryEx>
                </controls:GridView.Resources>
            </controls:GridView>
        </StackPanel>
    </Grid>
</UserControl>